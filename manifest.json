{
  "name": "baguazhen",
  "version": "1.0",
  "manifest_version": 2,
  "description": "finupgroup",
  "browser_action": {
    "default_title": "bgz-lite"
  },
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/utils.js", "js/content-script.js"]
    }
  ],
  "permissions": ["tabs", "storage", "<all_urls>"]
}